<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5858"
    android:id="@+id/mapLayout"
 >

    <RelativeLayout
        android:id="@+id/relativeMapFragLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/map_rounded_corner_overlay" />
    </RelativeLayout>

    <Button
        android:id="@+id/map_uploadButt"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@id/relativeMapFragLayout"
        android:layout_margin="30dp"
        android:background="@drawable/cloudcomputing"/>


</RelativeLayout>